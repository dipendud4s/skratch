{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./lib",
    "lib": [
      "es2015",
      "dom"
    ],
    "declaration": true,
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": false
  },
  "include": [
    "./src/**/*.ts"
  ],
